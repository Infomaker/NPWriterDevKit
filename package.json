            "name": "Danne Lundqvist",
            "email": "danne.lundqvist@infomaker.se"
        },
        {
            "name": "Andreas Kihlberg",
            "email": "andreas.kihlberg@infomaker.se"
        },
        {
            "name": "Oscar Karlsson",
            "email": "oscar.karlsson@infomaker.se"
        }
    ],
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Infomaker/NPWriterDevKit/issues"
    },
    "homepage": "https://github.com/Infomaker/NPWriterDevKit#readme",
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/plugin-transform-async-to-generator": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.0.0",
        "eslint": "^6.0.1",
        "eslint-loader": "^2.1.2",
        "express": "^4.17.1",
        "mini-css-extract-plugin": "^0.7.0",
        "node-sass": "^4.12.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "sass-loader": "^7.1.0",
        "string-replace-loader": "^2.2.0",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.3.0",
        "webpack": "^4.35.0",
        "webpack-cli": "^3.3.5",
        "webpack-dev-server": "^3.7.2",
        "webpack-merge": "^4.2.1"
    }
}
